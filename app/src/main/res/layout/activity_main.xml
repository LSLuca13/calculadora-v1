<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- DISPLAY -->
        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:gravity="end"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="#1E1E1E" />

        <!-- CONST -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Constantes"
            android:textColor="#BB86FC"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <Button android:id="@+id/btnPi" android:text="π" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnE" android:text="e" style="@style/CalcButtonSmall" />
            </TableRow>
        </TableLayout>

        <!-- FUNÇÕES -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funções"
            android:textColor="#BB86FC"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <Button android:id="@+id/btnRaiz" android:text="√" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnQuadrado" android:text="x²" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnFatorial" android:text="n!" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnPotencia" android:text="xʸ" style="@style/CalcButtonSmall" />
            </TableRow>

            <TableRow>
                <Button android:id="@+id/btnLn" android:text="ln" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnLog" android:text="log" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnInverso" android:text="1/x" style="@style/CalcButtonSmall" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <!-- TRIGONOMETRIA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trigonometria"
            android:textColor="#BB86FC"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <Button android:id="@+id/btnSen" android:text="sin" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnCos" android:text="cos" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnTan" android:text="tan" style="@style/CalcButtonSmall" />
            </TableRow>
        </TableLayout>

        <!-- OPERAÇÕES BÁSICAS -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TableRow>
                <Button android:id="@+id/btnCE" android:text="CE" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnC" android:text="C" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnDividir" android:text="/" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnMultiplicar" android:text="×" style="@style/CalcButtonSmall" />
            </TableRow>

            <TableRow>
                <Button android:id="@+id/btn7" android:text="7" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btn8" android:text="8" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btn9" android:text="9" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnMenos" android:text="−" style="@style/CalcButtonSmall" />
            </TableRow>

            <TableRow>
                <Button android:id="@+id/btn4" android:text="4" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btn5" android:text="5" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btn6" android:text="6" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnMais" android:text="+" style="@style/CalcButtonSmall" />
            </TableRow>

            <TableRow>
                <Button android:id="@+id/btn1" android:text="1" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btn2" android:text="2" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btn3" android:text="3" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnIgual" android:text="=" style="@style/CalcButtonSmall" />
            </TableRow>

            <TableRow>
                <Button android:id="@+id/btn0" android:text="0" style="@style/CalcButtonSmall" />
                <Button android:id="@+id/btnPonto" android:text="." style="@style/CalcButtonSmall" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>
